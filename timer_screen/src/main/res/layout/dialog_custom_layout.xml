<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/col_background_color"
    android:padding="16dp"
    style="@style/Widget.Material3.CardView.Elevated"
    android:theme="@style/Theme.TimerScreen">


    <EditText
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:hint="Введите имя" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/up_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Начало службы" />


        <TextView
            style="@style/MainTextViewStyle.Gray"
            android:id="@+id/start_service_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="23 января 2024"
            android:textSize="20dp"
            android:layout_below="@id/up_text"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/edit_date_button"
            style="@style/MainButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="15dp"
            app:icon="@drawable/pencil" />
    </RelativeLayout>


</LinearLayout>